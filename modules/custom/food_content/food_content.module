use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function food_content_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the food_content module.
    case 'help.page.food_content':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('My Awesome Module') . '</p>';
      return $output;

    default:
  }
}

